<!DOCTYPE html>
<html>
  <head>
    <title>Source</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:success].present? %>
    <div class="success">
      <%= flash[:success] %>
    </div>
    <% end %>

    <header>
      <h1>Source</h1>
      <nav>
        Username is <%= @current_user.username %>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
